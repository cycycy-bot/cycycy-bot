{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "no-console": 0,
        "no-restricted-globals": 0,
        "no-plusplus": 0,
        "import/no-dynamic-require" : 0,
        "consistent-return" : 0,
        "global-require": 0,
        "max-len": 0,
        "no-undef": 0
    }
}